                  <Label layoutX="202.0" layoutY="18.0" text="Rules" />
                  <ChoiceBox fx:id="rulesChoice" layoutX="188.0" layoutY="41.0" prefWidth="150.0" />
                  <Button layoutX="396.0" layoutY="41.0" mnemonicParsing="false" onAction="#submitNewGame" text="New game" />
               </children>
            </AnchorPane>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
